<div class="max-w-4xl mx-auto p-6">
  <header class="mb-6">
    <h1 class="text-3xl font-bold text-gray-800">
      <%= t('checkins.title', default: 'Your check-ins') %>
      <span class="text-base font-medium text-gray-500">(<%= @total_count %>)</span>
    </h1>
    <p class="text-sm text-gray-600 mt-1">
      <%= t('checkins.subtitle', default: 'A history of your mood check-ins') %>
    </p>
  </header>

  <% if @checkins.any? %>
    <ul class="space-y-4">
      <% @checkins.each do |checkin| %>
        <li class="bg-white rounded-lg p-4 shadow-sm border">
          <div class="flex items-center justify-between">
            <div class="text-sm text-gray-500">
              <%= l(checkin.created_at, format: :short) %>
            </div>
            <div class="text-sm text-gray-700 font-semibold">
              <%= t("checkins.mood_label", default: "Mood") %>: <span class="ml-1"><%= checkin.mood_level %>/10</span>
            </div>
          </div>

          <div class="mt-3 text-gray-800">
            <% if checkin.notes.present? %>
              <%= simple_format(h(checkin.notes)) %>
            <% else %>
              <span class="text-gray-400"><%= t('checkins.no_notes', default: 'No comment') %></span>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>

    <div class="mt-6">
      <%= paginate @checkins if defined?(paginate) %>
    </div>
  <% else %>
    <div class="bg-yellow-50 border-l-4 border-yellow-300 p-4 rounded">
      <p class="text-gray-700">
        <%= t('checkins.empty', default: "You don't have any check-ins yet â€” try the quick check-in on the home page!") %>
      </p>
    </div>
  <% end %>
</div>