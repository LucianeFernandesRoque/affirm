<div class="max-w-2xl mx-auto p-6">
  <div class="text-center mb-8">
    <h1 class="text-4xl font-bold text-gray-800 mb-4">Create Today's Gratitudes</h1>
    <p class="text-lg text-gray-600">Take a moment to reflect on what you're grateful for today</p>
  </div>

  <%= form_with url: store_gratitude_path, method: :post, local: true, class: "space-y-6" do |form| %>
    <div class="space-y-4">
      <% 3.times do |i| %>
        <div class="bg-gray-50 p-6 rounded-lg border border-gray-200">
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Gratitude <%= i + 1 %>:
          </label>
          <%= form.text_area "gratitude[contents][]", 
              placeholder: "I am grateful for...", 
              rows: 3,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 resize-none",
              required: i == 0 %>
        </div>
      <% end %>
    </div>

    <div class="flex justify-center space-x-4 pt-6">
      <%= link_to "Cancel", gratitude_path, 
          class: "inline-block bg-gray-500 hover:bg-gray-600 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200" %>
      <%= form.submit "Create Gratitudes", 
          class: "inline-block bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200" %>
    </div>
  <% end %>

  <div class="mt-8 text-center">
    <p class="text-sm text-gray-500">
      ðŸ’¡ Tip: Focus on the small, everyday things that bring you joy and appreciation
    </p>
  </div>
</div>
