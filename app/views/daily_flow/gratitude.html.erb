<div class="max-w-4xl mx-auto p-6">
  <!-- Progress Indicator -->
  <div class="mb-8">
    <div class="flex items-center justify-center space-x-2 mb-4">
      <div class="flex items-center">
        <div class="w-8 h-8 bg-green-500 text-white rounded-full flex items-center justify-center">✓</div>
        <span class="ml-2 text-sm font-medium text-green-600">Check-In</span>
      </div>
      <div class="w-12 h-0.5 bg-green-500"></div>
      <div class="flex items-center">
        <div class="w-8 h-8 bg-green-500 text-white rounded-full flex items-center justify-center">✓</div>
        <span class="ml-2 text-sm font-medium text-green-600">Affirmation</span>
      </div>
      <div class="w-12 h-0.5 bg-green-500"></div>
      <div class="flex items-center">
        <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center font-semibold">3</div>
        <span class="ml-2 text-sm font-medium text-blue-600">Gratitude</span>
      </div>
      <div class="w-12 h-0.5 bg-gray-300"></div>
      <div class="flex items-center">
        <div class="w-8 h-8 bg-gray-300 text-gray-600 rounded-full flex items-center justify-center font-semibold">4</div>
        <span class="ml-2 text-sm font-medium text-gray-400">Reflect</span>
      </div>
    </div>
  </div>

  <!-- Gratitude Section -->
  <div class="text-center mb-8">
    <h1 class="text-4xl font-bold text-gray-800 mb-4">Record Your Gratitudes</h1>
    <p class="text-lg text-gray-600">What are you grateful for today?</p>
  </div>

  <!-- Gratitude Prompt -->
  <div class="bg-gradient-to-r from-purple-50 to-pink-50 border-2 border-purple-200 p-6 rounded-xl mb-8 text-center">
    <p class="text-lg text-gray-700 font-medium">
      💭 Prompt: <%= @current_prompt %>
    </p>
  </div>

  <!-- Gratitude Form -->
  <%= form_with url: daily_flow_save_gratitude_path, method: :post, local: true, class: "space-y-6 mb-8" do |form| %>
    <div class="space-y-4">
      <% 3.times do |i| %>
        <div class="bg-white p-6 rounded-lg border-2 border-gray-200 shadow-sm">
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Gratitude <%= i + 1 %>:
          </label>
          <%= form.text_area "gratitude[contents][]", 
              placeholder: "I am grateful for...", 
              rows: 3,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 resize-none",
              required: i == 0 %>
        </div>
      <% end %>
    </div>

    <!-- Navigation Buttons -->
    <div class="flex justify-between items-center pt-6">
      <%= link_to "← Back", daily_flow_affirmation_path, 
          class: "inline-block bg-gray-500 hover:bg-gray-600 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200" %>
      <%= form.submit "Next: Reflect →", 
          class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200" %>
    </div>
  <% end %>

  <div class="text-center">
    <p class="text-sm text-gray-500">
      💡 Tip: Focus on the small, everyday things that bring you joy and appreciation
    </p>
  </div>
</div>
